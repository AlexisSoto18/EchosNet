<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <%= simple_form_for(@tweeet) do |f| %>
          <%= f.error_notification %>
          <div class="field">
			<h1 class="title">Tu eco</h1>
            <div class="control">
              <%= f.input :tweeet, label: "Tweeet about it", input_html: {class: "textarea"}, wrapper: false, 
              label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
            </div>
          </div>
          <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <%= link_to "Editar este eco", edit_tweeet_path(@tweeet), class: "button is-primary" %>
            </div>
            <div class="control">
              <%= link_to "Regresar a los ecos", tweeets_path, class: "button is-light" %>
            </div>
            <div class="control">
              <%= f.button :submit, class: "button is-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
