<div class="column">
  <nav class="panel">
    <p class="panel-heading">Sugerencias para ti</p>

    <% if @users_to_follow.present? %>
      <% @users_to_follow.each do |user| %>
        <div class="panel-block">
          <article class="media">
            <div class="media-left">
              <figure class="image is-32x32">
                <!-- Imagen de marcador de posiciÃ³n fija -->
                <img src="https://bulma.io/assets/images/placeholders/64x64.png" alt="<%= user.username %>">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= user.name %></strong>
                  <small>@<%= user.username %></small>
                </p>
              </div>
            </div>
            <div class="media-right">
              <% unless current_user.followed_users.include?(user) %>
                <%= button_to 'Follow', follow_user_path(user), method: :post, class: "button is-primary is-small" %>
              <% end %>
            </div>
          </article>
        </div>
      <% end %>
    <% else %>
      <div class="panel-block">
        <p>No users available to follow.</p>
      </div>
    <% end %>

      <% if flash[:notice] %>
        <div id="notification" class="notification is-primary global-notification">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div id="notification" class="notification is-danger global-notification">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
  </nav>
</div>

